#função para organizar o menu
def linha(tam = 42):
    return '-' * tam

# função para fixar a linha no centro
def cabeçalho(txt):
    print(linha())
    print(txt.center(42))
    print(linha())


def menu(lista):
    cabeçalho('Menu Principal')
